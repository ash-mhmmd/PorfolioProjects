-- CREATING TABLE AND INSERTING DATA

  CREATE TABLE STAFF
  (
    STAFF_ID  VARCHAR(20)
    , STAFF_TYPE VARCHAR(30)
    , SCHOOL_ID VARCHAR(20)
    , FIRST_NAME  VARCHAR(100) NOT NULL
    , LAST_NAME VARCHAR(100) NOT NULL
    , AGE INT
    , DOB DATE
    , GENDER VARCHAR(1) CHECK (GENDER IN ('N,'F'))
    , JOIN_DATE DATE
    , ADDRESS_ID VARCHAR(20)
    , CONSTRAINT PK_STAFF PRIMARY KEY(STAFF_ID)
    , CONSTRAINT FK_STAFF_SCHL FOREIGN KEY (SCHOOL_ID) REFERENCES SCHOOL(SCHOOL_ID)
    , CONSTRAINT FK_STAFF_ADDR FOREIGN KEY (ADDRESS_ID) REFERENCES ADDRESS(ADDRESS_ID)
  );
  
  SELECT * FROM ADDRESS;
  SELECT * FROM SCHOOL;
  SELECT * FROM STAFF;
  
  INSERT INTO STAFF (STAFF_ID, STAFF_TYPE, SCHOOL_ID, FIRST_NAME, LAST_NAME, AGE, DOB, GENDER, JOIN_DATE, ADDRESS_ID) VALUES
  ('STF1001', 'Teaching', 'SCHL1001', 'Sheila', 'Raathi', '22', TO_DATE('09/04/1999', 'DD/MM/YYY'), 'FEMALE', TO_DATE('03/21/2021', 'DD/MM/YYY'), 
  'ADR1010'), COMMIT;
  
  
  -- PRACTICING OTHER DDL COMMANDS
  
  DROP TABLE STAFF;
  SELECT * FROM STAFF;
  
  ALTER TABLE STAFF DROP COLUMN JOIN_DATE;
  ALTER TABLE STAFF ALTER COLUMN AGE TYPE VARCHAR(5);
  ALTER TABLE STAFF RENAME TO STAFF_NEW;
  ALTER TABLE STAFF_NEW RENAME COLUMN FIRST_NAME TO FULL_NAME;
  ALTER TABLE STAFF_NEW ADD CONSTRAINT UNQ_STF UNIQUE (STAFF_TYPE);
  DROP TABLE STAFF_NEW;
  
  --PRACTICING DML COMMANDS
  
  SELECT * FROM ADDRESS;
  
  INSERT INTO ADDRESS (ADDRESS_ID, STREET, CITY, STATE, COUNTRY)
  VALUES ('ADR1011', '298 BELFORD DRIVE', 'TAMPA', 'FLORIDA', 'UNITED STATES');
  
  INSERT INTO ADDRESS
  VALUES ('ADR1012', '385 DRISKILL AVENUE', 'EGG HARBOR TOWNSHIP', 'NEW JERSEY', 'UNITED STATES');
  
  INSERT INTO ADDRESS
  VALUES (
    ('ADR1002', '76 STEELE DRIVE', 'ATLANTA', 'GEORGIA', 'UNITED STATES'),
    ('ADR1003', '4813 GARRISON STREET', 'DALLAS', 'TEXAS', 'UNITED STATES'),
    ('ADR1004', '62 GARLIN AVENUE', 'NEW ORLEANS', 'LOUISIANA', 'UNITED STATES'),
    ('ADR1005', '119 GILLIAM ROAD', 'SEATTLE', 'WASHINGTON', 'UNITED STATES')):
 
 UPDATE ADDRESS
 SET COUNTRY = 'CANADA'
 WHERE ADDRESS_ID = 'ADR_1004';
 
 UPDATE ADDRESS
 SET COUNTRY = 'UNITED KINGDOM' CITY = 'LONDON'
 WHERE ADDRESS_ID = 'ADR_1002';
 
 DELETE FROM ADDRESS WHERE COUNTRY = 'CANADA';
 DELETE FROM SCHOOL;
 DELETE FROM ADDRESS;
 
